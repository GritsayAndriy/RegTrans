<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.regtrans.controller.AppController">
  <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Звіти">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#createReport" text="Створити звіт" />
                  <MenuItem fx:id="btnMenuPrintReport" mnemonicParsing="false" onAction="#printReport" text="Друкувати звіт" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Редагування">
            <items>
              <MenuItem fx:id="btnMenuEditDrivers" mnemonicParsing="false" onAction="#openAddDriverWindow" text="Водії" />
                  <MenuItem fx:id="btnMenuEditTransport" mnemonicParsing="false" onAction="#openEditTransportWindow" text="Транспорт" />
                  <MenuItem fx:id="menuItemTrailer" mnemonicParsing="false" onAction="#editingTrailer" text="Причіпи" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Довідка">
            <items>
              <MenuItem mnemonicParsing="false" text="Про програму" />
                  <MenuItem mnemonicParsing="false" text="Використання" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <top>
            <FlowPane prefHeight="6.0" prefWidth="900.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Обрати рік та місяць календаря: ">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <Spinner fx:id="spinnerYear" prefHeight="25.0" prefWidth="80.0">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Spinner>
                  <Spinner fx:id="monthSpinner" prefHeight="25.0" prefWidth="106.0">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Spinner>
                  <Button fx:id="btnUpdateTableCalendar" mnemonicParsing="false" onAction="#updateTableCalendar" text="Показати" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </BorderPane.margin>
            </FlowPane>
         </top>
         <center>
            <ScrollPane fx:id="scrollTimeSheet" fitToHeight="true" fitToWidth="true" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
               <content>
                  <AnchorPane fx:id="timeSheetPane">
                     <children>
                        <TableView fx:id="tableTimeSheet" fixedCellSize="0.0" focusTraversable="false" layoutX="0" pickOnBounds="false" prefHeight="498.0" prefWidth="415.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy></TableView>
                     </children>
                  </AnchorPane>
               </content>
            </ScrollPane>
         </center>
         <right>
            <HBox prefHeight="497.0" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane fx:id="scrollResult" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="-Infinity" prefHeight="497.0" prefWidth="150.0">
                    <content>
                      <AnchorPane fx:id="resultPane">
                           <children>
                              <TableView fx:id="tableResult" cache="true" cacheHint="SCALE_AND_ROTATE" fixedCellSize="0.0" focusTraversable="false" mouseTransparent="true" prefHeight="515.0" prefWidth="127.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy></TableView>
                           </children>
                        </AnchorPane>
                    </content>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="13.5" />
                     </padding>
                  </ScrollPane>
                  <VBox prefHeight="477.0" prefWidth="116.0">
                     <children>
                        <Label text="Витрати пального" />
                        <Label text=" за місяць:">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label text="A-95">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Label>
                        <Label fx:id="labelA95" text="0">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" />
                           </VBox.margin></Label>
                        <Label text="А-92">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Label>
                        <Label fx:id="labelA92" text="0">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" />
                           </VBox.margin></Label>
                        <Label text="А-80">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Label>
                        <Label fx:id="labelA80" text="0">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin></Label>
                        <Label text="ДП">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Label>
                        <Label fx:id="labelDP" text="0">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" />
                           </VBox.margin></Label>
                        <Label text="ГАЗ">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Label>
                        <Label fx:id="labelGAZ" text="0">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" />
                           </VBox.margin></Label>
                        <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#openCalculateWindow" prefHeight="25.0" prefWidth="95.0" text="Розрахувати">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin></Button>
                      <Button fx:id="btnCreateReport" mnemonicParsing="false" onAction="#createReport" text="Створити звіти">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin></Button>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets top="0.5" />
               </padding>
            </HBox>
         </right>
         <left>
            <ScrollPane fx:id="scrollTableDrivers" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane fx:id="drivePane">
                     <children>
                        <TableView fx:id="tableViewDrivers" fixedCellSize="0.0" focusTraversable="false" mouseTransparent="true" prefHeight="512.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy></TableView>
                     </children>
                  </AnchorPane>
              </content>
               <BorderPane.margin>
                  <Insets left="20.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="13.5" top="0.5" />
               </padding>
            </ScrollPane>
         </left>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="30.0" />
               </BorderPane.margin>
            </AnchorPane>
         </bottom>
      </BorderPane>
  </children>
</VBox>
